{
  "name": "typed-snapshot",
  "version": "0.2.0",
  "description": "Generate typed TypeScript snapshots (const/enum/union) to file.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "bugs": {
    "url": "https://github.com/naoeosavio/typed-snapshot/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/naoeosavio/typed-snapshot.git"
  },
  "author": "it is not savio",
  "keywords": ["typescript", "codegen", "snapshot", "enum", "union"],
  "license": "MIT",
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "tsc",
    "format": "biome check --write src",
    "check": "biome check src",
    "ci": "npm run lint && npm run check && npm run build",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@types/node": "24.9.1",
    "tsup": "^8.0.1",
    "typescript": "^5.4.5"
  }
}
